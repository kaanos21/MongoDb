@model MongoDb.Dtos.CategoryDtos.GetByIdCategoryDto

@{
    Layout = "~/Views/Default/LayoutIndex.cshtml";
}

<link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />

<div class="container">
    <br /><br />
    <form method="post">
        <div class="alert alert-info">Kategori Güncelleme Sayfası</div>
        <label>Kategori Id</label>
        <input type="text" asp-for="CategoryId" readonly class="form-control" />
        <br />
        <label>Kategori Adı</label>
        <input type="text" asp-for="CategoryName" class="form-control" />
        <br />
        <button class="btn btn-success">Kategoriyi Kaydet</button>
    </form>
</div>
